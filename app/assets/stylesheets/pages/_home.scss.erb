.wrapper-gray {
  background-color: $gray;
}

.wrapper-aqua {
  background-color: $pale_aqua;
}

.container {
  padding: 10px;
}

.urgent {
  font-size: 16px;
  color: $black;
  background-color: $yellow;
}

.banner {
  color: $white;
  text-align: center;
  height: 100vh;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner h1 {
  font-size: 60px;
  font-weight: bold;
  text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
}

.banner p {
  font-size: 25px;
  font-weight: lighter;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 20px;
}

.jumbotron {
  background:url("<%= image_path 'disaster_2000x1333_optim.jpg' %>") center no-repeat;
  background-size: cover;
  padding-bottom:0px;
}

