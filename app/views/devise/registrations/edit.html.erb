<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

      <h2>Edit Your Information</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, autofocus: true %>
        <%= f.input :last_name, required: true, autofocus: true %>
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for:
          <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
        <%= f.input :password_confirmation, required: false %>
        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
        <%= f.input :address, autofocus: true %>
        <!-- ToDo Add Map Functin and get latitude and longitude Here -->

        <%= f.input :phone_number, autofocus: true %>

        <!-- ToDo Enable to select organization from List-->
        <%= f.association :organization, autofocus: true %>

      </div>

      <div class="form-actions">
          <%= f.button :submit, "Update", {class: "btn-lg btn-primary btn-text" } %>
      </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>
        <%= link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn-primary btn-text" %></p>

      <%= link_to "Back", :back, class: "btn-primary btn-text" %>
      <hr>

    </div>
  </div>
</div>

<hr>
