<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

        <h2>Sign up</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true, autofocus: true %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>

          <%= f.input :address, autofocus: true %>
          <!-- ToDo Add Map Functin and get latitude and longitude Here -->

          <%= f.input :phone_number, autofocus: true %>

          <!-- ToDo Enable to select organization from List-->
          <%= f.association :organization, autofocus: true %>

          <!-- ToDo Enable to select evacuation_point from Map-->

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", {class: "btn-lg btn-primary btn-text" } %>
        </div>
        <% end %>

        <div class="pull-right">
          <%= render "devise/shared/links" %>
        </div>

      <hr>

    </div>
  </div>
</div>

<hr>

<%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?language=en&libraries=places&key=#{ENV['GOOGLE_API_BROWSER_KEY']}"></script>
<% end %>
