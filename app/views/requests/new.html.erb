<div class="container">

<h2> Create New Request </h2>

<%= simple_form_for [@user, @request] do |f| %>
  <%= f.error_notification %>


  create_table "requests", force: :cascade do |t|
    t.integer  "user_id"
    t.string   "type"
    t.string   "address"
    t.float    "latitude"
    t.float    "longitude"
    t.string   "status"
    t.string   "priority"
    t.datetime "created_at", null: false
    t.datetime "updated_at", null: false
    t.index ["user_id"], name: "index_requests_on_user_id", using: :btree
  end

  <div class="form-inputs">
    <%= f.input :type, required: true, autofocus: true, hint: "Supplies, Fire, Medical, etc." %>
    <%= f.input :address, required: true, autofocus: true %>
    <%= f.input :priority, required: true, autofocus: true, hint: "Extremely Urgent, Urgent, Moderate, Not Urgent" %>

    <%= f.input :address, autofocus: true %>
    <!-- ToDo Add Map Functin and get latitude and longitude Here -->

    <%= f.input :phone_number, autofocus: true %>

    <!-- ToDo Enable to select organization from List-->
    <%= f.input :organization, autofocus: true %>

    <!-- ToDo Enable to select evacuation_point from Map-->
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
