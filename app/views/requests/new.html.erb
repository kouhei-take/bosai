<div class="container">

  <h2>
    Create New Request
  </h2>

  <%= simple_form_for [@user, @request] do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :category, required: true, autofocus: true, hint: "Supplies, Fire, Medical, etc." %>
    <%= f.input :address, required: true, autofocus: true %>
    <%= f.input :priority, required: true, autofocus: true, hint: "Extremely Urgent, Urgent, Moderate, Not Urgent" %>
    <!-- ToDo Add Map Functin and get latitude and longitude Here -->
    <!-- ToDo Enable to select evacuation_point from Map-->
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Go Next To Register Necessary Items", {class: "btn btn-warning"}%>
  </div>
  <% end %>

</div>
